@page
@model InventoryMgtSys.Areas.Identity.Pages.Roles.DetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Details</h1>

<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role.Name)
        </dt>
        <dd class="col-sm-10">
            Selected Role:  @Html.DisplayFor(model => model.Role.Name)
        </dd>
    </dl>
    @*----------------List of Users in the Role------------------------*@
    <table class="table">
        <thead>
            <tr>
                <th>
                    Users In this Role:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllRoleUsers)
            {


                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @*-------------------------*@
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Role.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>